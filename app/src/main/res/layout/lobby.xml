<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kevpoker.MainLobby">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Texas Hold'em Poker" />

    <TextView
        android:id="@+id/p1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_player1"
        android:textSize="20dp"
        android:text="Player 1"
        android:layout_below="@+id/title"
        android:layout_margin="15dp"/>
    <EditText
        android:id="@+id/n1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Name"
        android:text="kev1"
        android:digits=" abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890"
        android:layout_below="@+id/title"
        android:layout_toRightOf="@+id/p1"
        android:layout_margin="15dp"/>
    <EditText
        android:id="@+id/c1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="100"
        android:layout_below="@+id/title"
        android:layout_toRightOf="@+id/n1"
        android:layout_margin="15dp"/>

    <TextView
        android:id="@+id/p2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_player2"
        android:textSize="20dp"
        android:text="Player 2"
        android:layout_below="@+id/p1"
        android:layout_margin="15dp"/>
    <EditText
        android:id="@+id/n2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Name"
        android:text="kev2"
        android:digits=" abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890"
        android:layout_below="@+id/p1"
        android:layout_toRightOf="@+id/p2"
        android:layout_margin="15dp"/>
    <EditText
        android:id="@+id/c2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="100"
        android:layout_below="@+id/p1"
        android:layout_toRightOf="@+id/n2"
        android:layout_margin="15dp"/>

    <TextView
        android:id="@+id/p3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_player3"
        android:textSize="20dp"
        android:text="Player 3"
        android:layout_below="@+id/p2"
        android:layout_margin="15dp"/>
    <EditText
        android:id="@+id/n3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Name"
        android:text="kev3"
        android:digits=" abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890"
        android:layout_below="@+id/p2"
        android:layout_toRightOf="@+id/p3"
        android:layout_margin="15dp"/>
    <EditText
        android:id="@+id/c3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:inputType="number"
        android:layout_below="@+id/p2"
        android:layout_toRightOf="@+id/n3"
        android:layout_margin="15dp"/>

    <TextView
        android:id="@+id/p4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_player4"
        android:textSize="20dp"
        android:text="Player 4"
        android:layout_below="@+id/p3"
        android:layout_margin="15dp"/>
    <EditText
        android:id="@+id/n4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Name"
        android:text="kev4"
        android:digits=" abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890"
        android:layout_below="@+id/p3"
        android:layout_toRightOf="@+id/p4"
        android:layout_margin="15dp"/>
    <EditText
        android:id="@+id/c4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:inputType="number"
        android:layout_below="@+id/p3"
        android:layout_toRightOf="@+id/n4"
        android:layout_margin="15dp"/>

    <TextView
        android:id="@+id/p5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_player5"
        android:textSize="20dp"
        android:text="Player 5"
        android:layout_below="@+id/p4"
        android:layout_margin="15dp"/>
    <EditText
        android:id="@+id/n5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Name"
        android:digits=" abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890"
        android:layout_below="@+id/p4"
        android:layout_toRightOf="@+id/p5"
        android:layout_margin="15dp"/>
    <EditText
        android:id="@+id/c5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:inputType="number"
        android:layout_below="@+id/p4"
        android:layout_toRightOf="@+id/n5"
        android:layout_margin="15dp"/>

    <TextView
        android:id="@+id/p6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_player6"
        android:textSize="20dp"
        android:text="Player 6"
        android:layout_below="@+id/p5"
        android:layout_margin="15dp"/>
    <EditText
        android:id="@+id/n6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Name"
        android:digits=" abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890"
        android:layout_below="@+id/p5"
        android:layout_toRightOf="@+id/p6"
        android:layout_margin="15dp"/>
    <EditText
        android:id="@+id/c6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:inputType="number"
        android:layout_below="@+id/p5"
        android:layout_toRightOf="@+id/n6"
        android:layout_margin="15dp"/>




    <Button
        android:id="@+id/bAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Playerline"
        android:layout_above="@+id/bStart"
        android:layout_margin="15dp"
        />
    <Button
        android:id="@+id/bSubtract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove Playerline"
        android:layout_above="@+id/bStart"
        android:layout_toRightOf="@+id/bAdd"
        android:layout_margin="15dp"
        />
    <Button
        android:id="@+id/bStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Game"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        />
</RelativeLayout>
