<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kevpoker.PokerActivity">

    <ImageView
        android:layout_width="220dp"
        android:layout_height="250dp"
        android:src="@drawable/myshape"
        android:layout_alignParentRight="true"/>

    <TextView
    android:id="@+id/hi"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Hello World!" />

    <TextView
        android:id="@+id/card1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:text="C 1"
        android:layout_below="@+id/hi"/>
    <TextView
        android:id="@+id/card2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:text="C 2"
        android:layout_below="@+id/card1"/>
    <TextView
        android:id="@+id/card3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:text="C 3"
        android:layout_below="@+id/card2"/>
    <TextView
        android:id="@+id/card4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:text="C 4"
        android:layout_below="@+id/card3"/>
    <TextView
        android:id="@+id/card5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:text="C 5"
        android:layout_below="@+id/card4"/>


    <TextView
        android:id="@+id/pot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Current Pot:"
        android:layout_below="@+id/hi"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/calldifference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Chips req'd to call: "
        android:layout_below="@+id/card1"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/dealer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Dealer: "
        android:layout_below="@+id/card2"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/activeplayers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Active Players: "
        android:layout_below="@+id/card3"
        android:layout_alignParentRight="true"/>


    <TextView
        android:id="@+id/card6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:text="C 1"
        android:layout_above="@+id/b1"/>
    <TextView
        android:id="@+id/card7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:text="C 2"
        android:layout_above="@+id/b1"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="CURRENT PLAYER"
        android:layout_above="@+id/chips"
        android:textColor="#ff0000"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/chips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="   Chips:  "
        android:layout_above="@+id/card6"
        />
    <Button
        android:id="@+id/b1"
        android:text="Raise "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
    <Button
        android:id="@+id/b2"
        android:text="Call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/b1"/>
    <Button
        android:id="@+id/b3"
        android:text="Fold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/b2"/>
    <Button
        android:id="@+id/b4"
        android:text="RESET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/b3"/>
</RelativeLayout>
