<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kevpoker.MainActivity">

    <TextView
    android:id="@+id/debug"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="DEBUG SCREEN" />

    <EditText
        android:id="@+id/etcard1a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/debug"
        android:paddingLeft="20dp"
        android:textSize="20dp"
        android:inputType="number"
        android:text="0"/>
    <EditText
        android:id="@+id/etcard1b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/debug"
        android:layout_toRightOf="@+id/etcard1a"
        android:paddingLeft="20dp"
        android:textSize="20dp"
        android:inputType="number"
        android:text="0"/>
    <Button
        android:id="@+id/bcard1"
        android:text="Set table1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/debug"
        android:layout_toRightOf="@id/etcard1b"/>
    <TextView
        android:id="@+id/tvcard1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N/A"
        android:padding="5dp"
        android:paddingLeft="20dp"
        android:textSize="20dp"
        android:layout_below="@id/debug"
        android:layout_toRightOf="@id/bcard1"/>

    <EditText
        android:id="@+id/etcard2a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etcard1a"
        android:paddingLeft="20dp"
        android:textSize="20dp"
        android:inputType="number"
        android:text="0"/>
    <EditText
        android:id="@+id/etcard2b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etcard1a"
        android:layout_toRightOf="@+id/etcard2a"
        android:paddingLeft="20dp"
        android:textSize="20dp"
        android:inputType="number"
        android:text="0"/>
    <Button
        android:id="@+id/bcard2"
        android:text="Set table2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/etcard1a"
        android:layout_toRightOf="@id/etcard2b"/>
    <TextView
        android:id="@+id/tvcard2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N/A"
        android:padding="5dp"
        android:paddingLeft="20dp"
        android:textSize="20dp"
        android:layout_below="@id/etcard1a"
        android:layout_toRightOf="@id/bcard2"/>

    <EditText
        android:id="@+id/etcard3a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etcard2a"
        android:paddingLeft="20dp"
        android:textSize="20dp"
        android:inputType="number"
        android:text="0"/>
    <EditText
        android:id="@+id/etcard3b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etcard2a"
        android:layout_toRightOf="@+id/etcard3a"
        android:paddingLeft="20dp"
        android:textSize="20dp"
        android:inputType="number"
        android:text="0"/>
    <Button
        android:id="@+id/bcard3"
        android:text="Set table3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/etcard2a"
        android:layout_toRightOf="@id/etcard3b"/>
    <TextView
        android:id="@+id/tvcard3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N/A"
        android:padding="5dp"
        android:paddingLeft="20dp"
        android:textSize="20dp"
        android:layout_below="@id/etcard2a"
        android:layout_toRightOf="@id/bcard3"/>

    <EditText
        android:id="@+id/etcard4a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etcard3a"
        android:paddingLeft="20dp"
        android:textSize="20dp"
        android:inputType="number"
        android:text="0"/>
    <EditText
        android:id="@+id/etcard4b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etcard3a"
        android:layout_toRightOf="@+id/etcard4a"
        android:paddingLeft="20dp"
        android:textSize="20dp"
        android:inputType="number"
        android:text="0"/>
    <Button
        android:id="@+id/bcard4"
        android:text="Set table4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/etcard3a"
        android:layout_toRightOf="@id/etcard4b"/>
    <TextView
        android:id="@+id/tvcard4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N/A"
        android:padding="5dp"
        android:paddingLeft="20dp"
        android:textSize="20dp"
        android:layout_below="@id/etcard3a"
        android:layout_toRightOf="@id/bcard4"/>

    <EditText
        android:id="@+id/etcard5a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etcard4a"
        android:paddingLeft="20dp"
        android:textSize="20dp"
        android:inputType="number"
        android:text="0"/>
    <EditText
        android:id="@+id/etcard5b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etcard4a"
        android:layout_toRightOf="@+id/etcard5a"
        android:paddingLeft="20dp"
        android:textSize="20dp"
        android:inputType="number"
        android:text="0"/>
    <Button
        android:id="@+id/bcard5"
        android:text="Set table5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/etcard4a"
        android:layout_toRightOf="@id/etcard5b"/>
    <TextView
        android:id="@+id/tvcard5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N/A"
        android:padding="5dp"
        android:paddingLeft="20dp"
        android:textSize="20dp"
        android:layout_below="@id/etcard4a"
        android:layout_toRightOf="@id/bcard5"/>


    <Button
        android:id="@+id/straight"
        android:text="StraightPreset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etcard5a"
        />
    <Button
        android:id="@+id/flush"
        android:text="FlushPreset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/straight"
        />
    <Button
        android:id="@+id/flush2"
        android:text="FlushPreset -1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/straight"
        android:layout_toRightOf="@id/flush"
        />
    <Button
        android:id="@+id/fullhouse"
        android:text="FullHousePreset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/flush"
        />
    <Button
        android:id="@+id/fourkind"
        android:text="4ofaKindPreset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fullhouse"
        />


    <Button
        android:id="@+id/bshuffle"
        android:text="Shuffle All, return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
    <Button
        android:id="@+id/bfinish"
        android:text="Finished Deck Edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/bshuffle"/>

</RelativeLayout>
